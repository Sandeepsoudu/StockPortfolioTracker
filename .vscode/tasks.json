{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "maven build",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$maven-error",
                "$maven-compile"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
